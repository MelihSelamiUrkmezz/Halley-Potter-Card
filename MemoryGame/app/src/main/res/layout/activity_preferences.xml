<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Preferences">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/kisisayisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyuncu Sayısı"
                android:textAlignment="center"
                android:textColor="@color/custom"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                >



                <Button
                    android:id="@+id/birkisilik"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/custom"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="1 kişilik"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginRight="5dp"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/ikikisilik"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/custom"
                    android:text="2 Kişilik"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/zorlukderecesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zorluk Derecesi"
                android:textAlignment="center"
                android:textColor="@color/custom"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                >

                <Button
                    android:id="@+id/kolay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/custom"
                    android:text="Kolay"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/orta"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/custom"
                    android:text="Orta"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginRight="5dp"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/zor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/custom"
                    android:text="Zor"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:cornerRadius="20dp"
                    android:layout_weight="1"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/oyunbutonu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/custom"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:text="Oyna!"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:cornerRadius="50dp">


    </Button>


</LinearLayout>